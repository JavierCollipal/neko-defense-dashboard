# Copy this file to .env and fill in your actual values, nyaa~!

# Port Configuration
PORT=3000
API_PORT=5001

# MongoDB Configuration (Get from MongoDB Atlas)
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/
MONGODB_DATABASE=neko-defense-system

# REST API URL (Express server)
REACT_APP_API_URL=http://localhost:5001/api

# GraphQL API URL (NestJS server) - CRITICAL FOR APOLLO CLIENT!
# Must match PORT in neko-defense-api/.env (default: 4000, but check your setup!)
REACT_APP_GRAPHQL_URL=http://localhost:4000/graphql

# Development Mode
NODE_ENV=development

# Security Configuration (Comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5001

# For production deployment, add your production URLs:
# ALLOWED_ORIGINS=https://your-app.vercel.app,https://your-api.railway.app

