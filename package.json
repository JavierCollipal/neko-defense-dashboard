{
  "name": "neko-defense-dashboard",
  "version": "1.0.0",
  "description": "🐾⚡ NEKO-ARC Defense System Dashboard - Real-time threat monitoring with ASCII art, nyaa~!",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage --watchAll=false",
    "test:watch": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false --collectCoverageFrom='src/**/*.{js,jsx}' --coverageThreshold='{\"global\":{\"lines\":100,\"branches\":100,\"functions\":100,\"statements\":100}}'",
    "server": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm start\"",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "e2e": "start-server-and-test start http://localhost:3000 cypress",
    "e2e:headless": "start-server-and-test start http://localhost:3000 cypress:headless",
    "test:e2e": "npm run e2e:headless",
    "test:all": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "@apollo/client": "^3.14.0",
    "@vitalets/google-translate-api": "^9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "graphql": "^16.11.0",
    "helmet": "^8.1.0",
    "i18next": "^25.6.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "multer": "^2.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.0.1",
    "react-responsive": "^10.0.1",
    "react-router-dom": "^6.30.1",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.14.7",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "concurrently": "^8.2.2",
    "cypress": "^15.4.0",
    "cypress-real-events": "^1.15.0",
    "jest-canvas-mock": "^2.5.2",
    "mongodb": "^6.20.0",
    "start-server-and-test": "^2.1.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/reportWebVitals.js"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100,
        "branches": 100,
        "functions": 100,
        "statements": 100
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
